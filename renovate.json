{
  "masterIssue": true,
  "rangeStrategy": "update-lockfile",
  "extends": [
    "config:base",
    "helpers:disableTypesNodeMajor"
  ],
  "packageRules": [
    {
      "packagePatterns": "^solc-[-0-9]+$",
      "updateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "excludePackageNames": ["solc"],
      "extends": ["group:allNonMajor"]
    }
  ]
}
